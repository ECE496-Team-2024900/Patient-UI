<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEEBF9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- ImageView for logo image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:srcCompat="@drawable/product_logo" />

    <TextView
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#004AAD"
        android:paddingBottom="8dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:text="Email" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="55dp"
            android:hint="Tap to enter your registered email" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="184dp"
        android:layout_height="99dp"
        android:backgroundTint="#004AAD"
        android:text="Enter"
        android:textColor="#B1EDFF"
        android:drawableRight="@drawable/ic_arrow_front"
        android:textSize="24sp"
        app:cornerRadius="1000dp" />
</LinearLayout>
