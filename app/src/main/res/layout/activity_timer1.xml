<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEEBF9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TimerActivity1">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session is in Progress"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp" />

    <!-- ProgressBar for timer -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="#004AAD"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- Timer TextView -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:textColor="#000"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="32dp" />

    <!-- Dynamic Instruction TextView -->
    <TextView
        android:id="@+id/dynamicInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The solvent is being dispensed."
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Instruction TextView -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please stay still and do not turn off your device"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="32dp" />
</LinearLayout>
