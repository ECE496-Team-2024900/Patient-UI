<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#EAF6FF">

    <!-- Email Section -->
    <TextView
        android:id="@+id/tvEmailInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Enter your email address below, and we will send a verification code to your email."
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:gravity="start" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:inputType="textEmailAddress" />

    <!-- Verification Code Section -->
    <TextView
        android:id="@+id/tvCodeInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the verification code you received in your email."
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:gravity="start" />

    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter verification code"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:inputType="number" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#0D47A1"
        android:fontFamily="sans-serif"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <!-- Additional Note -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you do not receive a code within two minutes, please click 'Resend Code' to try again."
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:gravity="start" />

    <Button
        android:id="@+id/btnResendCode"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#0D47A1"
        android:fontFamily="sans-serif"
        android:text="Resend Code"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="87dp"
        android:layout_height="59dp"
        android:background="@drawable/back_button_background"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginBottom="16dp" />
</LinearLayout>
